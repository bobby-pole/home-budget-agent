{
  "name": "home-budget-agent",
  "private": true,
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": [
      "bash -c 'cd frontend && npx eslint --max-warnings=0 \"${@}\"' --"
    ],
    "backend/**/*.py": [
      "bash -c 'cd backend && source venv/bin/activate && ruff check \"${@}\"' --"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}

