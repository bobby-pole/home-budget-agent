echo "▶ [pre-push] Type-check..."
cd "$(git rev-parse --show-toplevel)/frontend"
npx tsc --noEmit -p tsconfig.app.json || { echo "❌ Type-check failed. Push aborted."; exit 1; }

echo "▶ [pre-push] Build..."
npm run build || { echo "❌ Build failed. Push aborted."; exit 1; }

echo "✅ pre-push checks passed."
